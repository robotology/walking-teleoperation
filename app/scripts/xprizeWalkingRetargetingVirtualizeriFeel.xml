<application>

  <name>Xprize_Demo (walking Virtualizer iFeel)</name>
  <description>2D-DCM walking application.</description>
  <version>1.0</version>
  <authors>
    <author email="kourosh.darvish@iit.it">Kourosh Darvish</author>
  </authors>

  <module>
    <name>yarpdev</name>
    <parameters> --from camera/ServerGrabberDualDragon.ini --split true</parameters>
    <node>icub-head</node>
  </module>

  <module>
    <name>camCalibWithPose</name>
    <parameters>--context cameraCalibration --from icubEyes.ini --group CAMERA_CALIBRATION_LEFT --name /icub/camcalib/left</parameters>
    <node>icub-console</node>
  </module>

  <module>
    <name>camCalibWithPose</name>
    <parameters>--context cameraCalibration --from icubEyes.ini --group CAMERA_CALIBRATION_RIGHT --name /icub/camcalib/right</parameters>
    <node>icub-console</node>
  </module>

  <module>
    <name>yarpdev</name>
    <parameters>--device JoypadControlServer --use_separate_ports 1 --period 10 --name /joypadDevice/Oculus --subdevice ovrheadset --sticks 0  --tfDevice transformClient --tfLocal /oculustf --tfRemote /transformServer --tf_head_frame headoculus --tf_left_hand_frame loculus --tf_right_hand_frame roculus --tf_root_frame oculusworld --w 1024 --h 768 --stick_as_axis true --userpose true --gui_elements 1 --GUI_0::width 0.15 --GUI_0::height 0.15 --GUI_0::x 0.2 --GUI_0::y -0.2 --GUI_0::z -0.5 --GUI_0::alpha 1.0 --hfov 59 --left-pitch-offset 0.0725 --left-yaw-offset -0.065 --right-pitch-offset 0.13 --right-yaw-offset 0.07</parameters>
    <node>icub-virtualizer</node>
  </module>
  
  <module>
     <name>idyntree-yarp-visualizer</name>
     <node>icub-console-gui</node>
  </module>


  <!-- Modules -->
  <module>
    <name>WalkingModule</name>
    <node>icub-head</node>
    <parameters>--from dcm_walking_joint_retargeting_ifeel.ini</parameters>
  </module>
  

  <module>
    <name>VirtualizerModule</name>
    <node>icub-virtualizer</node>
  </module>

  <module>
    <name>OculusRetargetingModule</name>
    <node>icub-console-gui</node>
    <parameters> --OCULUS::move_icub_using_joypad 0</parameters>
    <dependencies>
      <port timeout="5.0">/transformServer/transforms:o</port>
      <port timeout="5.0">/joypadDevice/Oculus/rpc:i</port>
      <port timeout="5.0">/icub/cam/left</port>
      <port timeout="5.0">/icub/cam/right</port>
    </dependencies>
  </module>

  <!-- Whole Body Retargeting using Xsens-->
   <module>
     <name>XsensRetargetingModule</name>
     <parameters>--from iFeelRetargetingWalking.ini</parameters>
     <node>icub-console-gui</node>
   </module>


  <!-- Connections -->

  <!-- Virtualizer and Oculus -->
  <connection>
    <from>/walking-coordinator/torsoYaw:o</from>
    <to>/virtualizer/robotOrientation:i</to>
  </connection>

  <connection>
    <from>/walking-coordinator/torsoYaw:o</from>
    <to>/oculusRetargeting/robotOrientation:i</to>
  </connection>

  <connection>
    <from>/oculusRetargeting/walkingRpc</from>
    <to>/walking-coordinator/rpc</to>
  </connection>

  <connection>
    <from>/oculusRetargeting/virtualizerRpc</from>
    <to>/virtualizer/rpc</to>
  </connection>

  <connection>
    <from>/virtualizer/walkingRpc</from>
    <to>/walking-coordinator/rpc</to>
  </connection>

  <connection>
    <from>/virtualizer/playerOrientation:o</from>
    <to>/oculusRetargeting/playerOrientation:i</to>
  </connection>

  <connection>
    <from>/oculus/headpose/orientation:o</from>
    <to>/oculusRetargeting/oculusOrientation:i</to>
  </connection>

  <connection>
    <from>/oculus/headpose/position:o</from>
    <to>/oculusRetargeting/oculusPosition:i</to>
  </connection>

  
  <!-- Camera-->
  <connection>
    <from>/icub/cam/left</from>
    <to>/icub/camcalib/left/in</to>
    <protocol>mjpeg</protocol>
  </connection>

  <connection>
    <from>/icub/cam/right</from>
    <to>/icub/camcalib/right/in</to>
    <protocol>mjpeg</protocol>
  </connection>

  <connection>
    <from>/icub/head/state:o</from>
    <to>/icub/camcalib/left/head_encs/in</to>
    <protocol>udp</protocol>
  </connection>

  <connection>
    <from>/icub/head/state:o</from>
    <to>/icub/camcalib/right/head_encs/in</to>
    <protocol>udp</protocol>
  </connection>

  <connection>
    <!-- <from>/icub/inertial</from> -->
    <from>/oculusRetargeting/imagesOrientation:o</from>
    <to>/icub/camcalib/left/imu/in</to>
    <protocol>udp</protocol>
  </connection>

  <connection>
    <!-- <from>/icub/inertial</from> -->
    <from>/oculusRetargeting/imagesOrientation:o</from>
    <to>/icub/camcalib/right/imu/in</to>
    <protocol>udp</protocol>
  </connection>

  <connection>
    <from>/icub/camcalib/left/out</from>
    <to>/oculus/display/left:i</to>
    <protocol>mjpeg</protocol>
  </connection>

  <connection>
    <from>/icub/camcalib/right/out</from>
    <to>/oculus/display/right:i</to>
    <protocol>mjpeg</protocol>
  </connection>
  
  <connection>
    <from>/idyntree-yarp-visualizer/image</from>
    <to>/oculus/gui_0</to>
    <protocol>mjpeg</protocol>
  </connection>

  <connection>
    <from>/iCub/RobotStateWrapper/state:o</from>
    <to>/iFeelRetargeting/HumanStateWrapper/state:i</to>
  </connection>

  <connection>
    <from>/iFeelRetargeting/jointPosition:o</from>
    <to>/walking-coordinator/jointPosition:i</to>
  </connection>

  <connection>
    <from>/iFeelRetargeting/CoM:o</from>
    <to>/walking-coordinator/CoM:i</to>
  </connection>

</application>
